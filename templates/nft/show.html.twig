{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nft.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ nft.date ? nft.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PathImage</th>
                <td>{{ nft.pathImage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nft_index') }}">back to list</a>

    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
